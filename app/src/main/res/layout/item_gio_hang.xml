<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/khung3">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lvTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="Áo sơ mi"
                android:textColor="@color/nutBam"
                android:textSize="20dp"
                android:layout_marginStart="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lvGia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="200000đ"
                android:layout_marginStart="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                
                android:layout_marginLeft="50dp"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_minus_24"
                android:id="@+id/btnGiam"
                android:background="@color/white"
                ></ImageButton>

            <TextView
                android:id="@+id/lvSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="1"
                android:textSize="20dp"
                android:layout_marginStart="20dp" />
            <ImageButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus_24"
                android:id="@+id/btnTang"
                android:background="@color/white"
                ></ImageButton>

        </LinearLayout>


    </LinearLayout>



    <ImageButton
        android:id="@+id/btnHuyGH"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:src="@drawable/ic_xoa_24"
        />
    </LinearLayout>